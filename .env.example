# ============================================
# KADAVER - Environment Variables
# ============================================
# Copy this file to .env and fill in the values

# ============================================
# DATABASE (PostgreSQL)
# ============================================
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE?schema=public
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/kadaver?schema=public"

# ============================================
# SITE
# ============================================
NEXT_PUBLIC_SITE_URL="http://localhost:3000"
NEXT_PUBLIC_SITE_NAME="Kadaver"

# ============================================
# SUPABASE (Authentication)
# ============================================
# Get these from your Supabase project settings
SUPABASE_URL=""
SUPABASE_ANON_KEY=""
SUPABASE_SERVICE_ROLE_KEY=""

# ============================================
# ANALYTICS (Optional)
# ============================================
NEXT_PUBLIC_GA_ID=""

# ============================================
# STORAGE (Optional - for audio files)
# ============================================
# If using external storage for audio files
STORAGE_BUCKET_URL=""
